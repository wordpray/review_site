<% if user_signed_in? %>
  <% if review.like_user(current_user.id) %>
    <%= button_to product_review_like_path(like, review_id: review.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag("icon_red_heart.png") %>
      <span>
        <%= review.like_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to product_review_likes_path(review), id: "like-button", remote: true do %>
      <%= image_tag("icon_heart.png") %>
      <span>
        <%= review.like_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag("icon_heart.png") %>
    <span>
      <%= review.like_count %>
    </span>
<% end %>